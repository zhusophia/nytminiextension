{
  "name": "NYT Mini Recorder", 
  "description": "Tracking times on the NYT Mini",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "body.html",
    "default_icon": "images/minlogo.svg"
  }, 
  "background": {
    "service-worker": "background.js"
  },
  "permissions": ["scripting"], 
  "host-permissions": [
    "https://www.nytimes.com/crosswords/game/mini/*"
  ]
}

